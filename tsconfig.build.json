{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "useDefineForClassFields": true,
    "checkJs": false,
    // Completely ignore type checking for build
    "emitDeclarationOnly": false
  },
  // Exclude test files and anything else that shouldn't be part of the build
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "node_modules"]
}
